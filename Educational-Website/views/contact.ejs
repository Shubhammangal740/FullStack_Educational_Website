<link
  href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap"
  rel="stylesheet"
/>

<!-- STYLESHEETS -->
<link rel="stylesheet" href="/css/styles.css" />
<link rel="stylesheet" href="/css/contact.css" />

<body>
  <%- include('./includes/navigation.ejs') %>
  <!-- =============================== END OF NAVBAR ============================================================== -->

  <section class="contact">
    <div class="container contact__container">
      <aside class="contact__aside">
        <div class="aside__image">
          <img src="/uploads/images/tm3.jpg" alt="" />
        </div>
        <h2>Contact Us</h2>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dignissimos
          nulla dolores inventore ipsa, excepturi cumque!
        </p>
        <ul class="contact__details">
          <li>
            <i class="uil uil-phone-times"></i>
            <h5>+91 5265478951</h5>
          </li>
          <li>
            <i class="uil uil-envelope"></i>
            <h5>Harsh@gmail.com</h5>
          </li>
          <li>
            <i class="uil uil-location-point"></i>
            <h5>Harsh Tiwari, jaipur, india</h5>
          </li>
        </ul>
        <ul class="contact__socials">
          <% socialLinks.forEach(link => { %>
          <li>
            <a href="<%= link.url %>"><i class="uil <%= link.icon %>"></i></a>
          </li>
          <% }) %>
        </ul>
      </aside>

      <form class="contact__form" action="/submit-contact" method="POST">
        <div class="form__name">
          <input
            type="text"
            name="firstName"
            placeholder="First Name"
            required
          />
          <input type="text" name="lastName" placeholder="Last Name" required />
        </div>
        <input
          type="email"
          name="email"
          placeholder="Your Email Address"
          required
        />
        <textarea
          name="message"
          rows="7"
          placeholder="Message"
          required
        ></textarea>
        <button type="submit" class="btn btn-primary">Send Message</button>
      </form>
    </div>
  </section>

  <!-- END of Contact Form -->

  <footer>
    <div class="container footer__container">
      <div class="footer__1">
        <a href="/" class="footer_logo"><h4><%= siteName %></h4></a>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ab veniam
          eaque accusamus officiis quo dolore, dolores tenetur, corporis facere
          modi.
        </p>
      </div>

      <div class="footer__2">
        <h4>Links</h4>
        <!-- == permalinks -->
        <ul class="links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/courses">Courses</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer__3">
        <h4>Privacy</h4>
        <ul class="privacy">
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/terms">Terms and Conditions</a></li>
          <li><a href="/refund">Refund Policy</a></li>
        </ul>
      </div>

      <div class="footer__4">
        <h4>Contact</h4>
        <div>
          <p>+91 5265478951</p>
          <p>Harsh@gmail.com</p>
        </div>

        <ul class="footer__socials">
          <% socialLinks.forEach(link => { %>
          <li>
            <a href="<%= link.url %>"><i class="uil <%= link.icon %>"></i></a>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </footer>

  <!-- END of FOOTER -->

  <script src="/main.js" charset="utf-8"></script>
</body>
