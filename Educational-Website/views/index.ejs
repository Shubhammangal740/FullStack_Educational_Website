<%- include('./includes/head.ejs') %>

<!-- ICONSCOUNT CDN -->
<link
  rel="stylesheet"
  href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css"
/>

<!-- GOOGLE FONTS (MONTSERRAT) -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap"
  rel="stylesheet"
/>

<!-- STYLESHEET -->
<link rel="stylesheet" href="/css/styles.css" />

<body>
  <%- include('./includes/navigation.ejs') %>
  <!-- =============================== END OF NAVBAR ============================================================== -->

  <header>
    <div class="container header__container">
      <div class="header__left">
        <h1>Learn at Your Own Pace</h1>
        <p>Join our community of learners and gain access to top courses.</p>
        <a href="/courses" class="btn btn-primary">Get Started</a>
      </div>
      <div class="header__right">
        <div class="header_right_image">
          <img src="/uploads/images/header_Img.svg" alt="header_Image" />
        </div>
      </div>
    </div>
  </header>
  <!-- =============================== END OF HEADER ============================================================== -->

  <section class="categories">
    <div class="container categories__container">
      <div class="categories__left">
        <h1>Categories</h1>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Distinctio
          ipsam nulla, similique recusandae perferendis nesciunt odio, dolorem
          nostrum asperiores incidunt eaque, suscipit ullam, deserunt sit labore
          libero! Aliquam, optio, delectus.
        </p>
        <a href="#" class="btn">Learn More</a>
      </div>

      <div class="categories__right">
        <article class="category">
          <span class="category__icon"><i class="uil uil-book"></i></span>
          <h5>Programming</h5>
          <p>Learn to code in various programming languages.</p>
        </article>
        <article class="category">
          <span class="category__icon"><i class="uil uil-paint-tool"></i></span>
          <h5>Design</h5>
          <p>Master the fundamentals of design.</p>
        </article>
        <article class="category">
          <span class="category__icon"><i class="uil uil-calculator"></i></span>
          <h5>Mathematics</h5>
          <p>Sharpen your mathematical skills.</p>
        </article>
      </div>
    </div>
  </section>
  <!-- ================================ END OF CATEGORIES ============================================ -->

  <section class="courses">
    <h2>Our Popular Courses</h2>
    <div class="container courses__container">
      <% courses.forEach(function(course) { %>
      <article class="course">
        <div class="course__img">
          <img src="<%= course.imageUrl %>" alt="<%= course.title %>" />
        </div>
        <div class="course__info">
          <h4><%= course.title %></h4>
          <p><%= course.description %></p>
          <a href="/courses/<%= course.id %>" class="btn btn-primary"
            >Learn More</a
          >
        </div>
      </article>
      <% }); %>
    </div>
  </section>
  <!-- ================================ END OF COURSES ============================================ -->

  <section class="faqs">
    <h2>Frequently Asked Question</h2>
    <div class="container faqs__container">
      <article class="faq">
        <div class="faq__icon"><i class="uil uil-plus"></i></div>
        <div class="question__answer">
          <h4>What is EduPro?</h4>
          <p>
            EduPro is an online learning platform offering a variety of courses.
          </p>
        </div>
      </article>
      <article class="faq">
        <div class="faq__icon"><i class="uil uil-plus"></i></div>
        <div class="question__answer">
          <h4>How do I enroll in a course?</h4>
          <p>
            You can enroll in a course by clicking on the "Get Started" button.
          </p>
        </div>
      </article>
      <article class="faq">
        <div class="faq__icon"><i class="uil uil-plus"></i></div>
        <div class="question__answer">
          <h4>What payment methods do you accept?</h4>
          <p>We accept credit/debit cards and PayPal.</p>
        </div>
      </article>
    </div>
  </section>
  <!-- ===================================   END Of FAQs  =========================================================================== -->

  <footer>
    <div class="container footer__container">
      <div class="footer__1">
        <a href="/" class="footer_logo"><h4><%= siteName %></h4></a>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ab veniam
          eaque accusamus officiis quo dolore, dolores tenetur, corporis facere
          modi.
        </p>
      </div>

      <div class="footer__2">
        <h4>Links</h4>
        <ul class="links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/courses">Courses</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer__3">
        <h4>Privacy</h4>
        <ul class="privacy">
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/terms">Terms and Conditions</a></li>
          <li><a href="/refund">Refund Policy</a></li>
        </ul>
      </div>

      <div class="footer__4">
        <h4>Contact</h4>
        <div>
          <p>+123 456 7890</p>
          <p>support@edupro.com</p>
        </div>

        <ul class="footer__socials">
          <li>
            <a href="https://facebook.com"><i class="uil uil-facebook"></i></a>
          </li>
          <li>
            <a href="https://instagram.com/shubham_mangal_14"
              ><i class="uil uil-instagram"></i
            ></a>
          </li>
          <li>
            <a href="https://twitter.com"><i class="uil uil-twitter"></i></a>
          </li>
          <li>
            <a href="https://linkedin.com"><i class="uil uil-linkedin"></i></a>
          </li>
        </ul>
      </div>
    </div>
  </footer>

  <!-- ==========================================  END of FOOTER =================================== -->

  <script src="/main.js" charset="utf-8"></script>
</body>
