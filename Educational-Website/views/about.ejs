          </li>
          <li>
            <a href="https://twitter.com"><i class="uil uil-twitter"></i></a>
          </li>
          <li>
            <a href="https://linkedin.com"><i class="uil uil-linkedin"></i></a>
          </li>
        </ul>
      </div>
    </div>
  </footer>

  <!-- ==========================================  END of FOOTER =================================== -->

  <script src="/main.js" charset="utf-8"></script>
