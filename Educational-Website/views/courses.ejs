<%- include('./includes/head.ejs') %>

<!-- ICONSCOUNT CDN -->
<link
  rel="stylesheet"
  href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css"
/>

<!-- GOOGLE FONTS (MONTSERRAT) -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap"
  rel="stylesheet"
/>

<!-- === STYLESHEET ======== -->
<link rel="stylesheet" href="/css/styles.css" />
<style>
  .courses {
    margin-top: 1rem;
  }
</style>

<body>
  <%- include('./includes/navigation.ejs') %>
  <!-- =============================== END OF NAVBAR ============================================================== -->

  <section class="courses">
    <div class="container courses__container">
      <% for (let course of courses) { %>
      <article class="course">
        <div class="course__img">
          <img src="<%=course.imageUrl %>" alt="<%= course.title %>" />
        </div>
        <div class="course__info">
          <h4><%= course.title %></h4>
          <p><%= course.description %></p>
          <a href="/courses/<%= course.id %>" class="btn btn-primary"
            >Learn More</a
          >
        </div>
      </article>
      <% }; %>
    </div>
  </section>
  <!-- ================================ END OF COURSES ============================================ -->

  <footer>
    <div class="container footer__container">
      <div class="footer__1">
        <a href="/" class="footer_logo">
          <h4><%= siteName %></h4>
        </a>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ab veniam
          eaque accusamus officiis quo dolore, dolores tenetur, corporis facere
          modi.
        </p>
      </div>

      <div class="footer__2">
        <h4>Links</h4>
        <!-- == permalinks -->
        <ul class="links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/courses">Courses</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer__3">
        <h4>Privacy</h4>
        <ul class="privacy">
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/terms">Terms and Conditions</a></li>
          <li><a href="/refund">Refund Policy</a></li>
        </ul>
      </div>

      <div class="footer__4">
        <h4>Contact</h4>
        <div>
          <p>+123 456 7890</p>
          <p>support@edupro.com</p>
        </div>

        <ul class="footer__socials">
          <li>
            <a href="https://facebook.com"><i class="uil uil-facebook"></i></a>
          </li>
          <li>
            <a href="https://instagram.com/shubham_mangal_14"
              ><i class="uil uil-instagram"></i
            ></a>
          </li>
          <li>
            <a href="https://twitter.com"><i class="uil uil-twitter"></i></a>
          </li>
          <li>
            <a href="https://linkedin.com"><i class="uil uil-linkedin"></i></a>
          </li>
        </ul>
      </div>
    </div>
  </footer>

  <!-- ==========================================  END of FOOTER =================================== -->

  <script src="/main.js" charset="utf-8"></script>
</body>
